
<div class="container">
<h2 class="text-center mt-4"><%= @article.title  %></h2><br>



<div class="row justify-content-md-center ">
    <div class="col-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            By <%= @article.user.username if @article.user %>
            <%= link_to gravatar_for(@article.user , size: 50), user_path(@article.user) %>
          </div>
          <div class="card-body">
            <div class="card-text"><%= simple_format(@article.description)%></div>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-success" %>
            <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-warning" %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago ,
            Updated <%= time_ago_in_words(@article.updated_at) %> ago</small>
          </div>
        </div>
    </div>
</div>   



<br>

</div>
